<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ErrorTestActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="錯誤測試"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以下有通往各網站的按鈕，點選按鈕將開啟瀏覽器查看原網站是否能正常使用"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/desc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="若是網站能正常使用而本閱讀器不能使用的話請通知開發人員"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
    <TextView
        android:id="@+id/desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="若是網站無法正常連線就是網站問題，可等待網站正常；若是長久如此請通知開發人員"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc1"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/desc2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/light_blue_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/piaotian"/>

        <Button
            android:id="@+id/piaotian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="飄天文學網"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/desc2"
            android:layout_marginTop="3dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/light_blue_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/czbooks"/>
        <Button
            android:id="@+id/czbooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="小說狂人"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/piaotian"
            android:layout_marginTop="3dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/light_blue_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/czbooks"/>
        <Button
            android:id="@+id/hjwzw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="黃金屋中文網"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/czbooks"
            android:layout_marginTop="3dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/light_blue_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hjwzw"/>
    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>