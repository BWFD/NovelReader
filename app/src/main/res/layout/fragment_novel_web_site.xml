<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".NovelWebSiteFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_blue_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/piaotian"/>

    <Button
        android:id="@+id/piaotian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:text="飄天文學網"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:layout_marginTop="-80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_blue_600"
        app:layout_constraintTop_toBottomOf="@+id/piaotian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/CZBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:text="小說狂人"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/piaotian"
        android:layout_marginTop="3dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_blue_600"
        app:layout_constraintTop_toBottomOf="@+id/CZBooks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/hjwzw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:text="黃金屋中文網"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/CZBooks"
        android:layout_marginTop="3dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_blue_600"
        app:layout_constraintTop_toBottomOf="@+id/hjwzw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:text="設定"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/hjwzw"
        android:layout_marginTop="3dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_blue_600"
        app:layout_constraintTop_toBottomOf="@+id/setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/errorTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:text="錯誤測試"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/setting"
        android:layout_marginTop="3dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_blue_600"
        app:layout_constraintTop_toBottomOf="@+id/errorTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>